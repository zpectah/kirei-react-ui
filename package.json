  "description": "A minimalist UI for React applications",
  "keywords": [
    "kirei",
    "react",
    "react-ui",
    "design",
    "system"
  ],
  "scripts": {
    "build:packages": "yarn nx run-many -t build",
    "start:demo": "cd demo && vite",
    "build:demo": "cd demo && vite build",
    "format:all:check": "prettier --check .",
    "format:all:write": "prettier --write .",
    "format:packages:write": "prettier --write packages",
    "format:demo:write": "prettier --write demo",
    "lint:all": "eslint .",
    "lint:packages": "eslint packages",
    "lint:demo": "eslint demo",
    "test": "jest /tests",
    "test:coverage": "jest /tests --coverage"
  },
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.11.3",
    "clsx": "^2.1.0",
    "color": "^4.2.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@emotion/eslint-plugin": "^11.11.0",
    "@nx/js": "17.2.8",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/color": "^3.0.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.51",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
